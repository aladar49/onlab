global
    daemon
    maxconn 256

defaults
    mode tcp
    timeout connect 5000ms
    timeout client 60000ms
    timeout server 60000ms

listen http-in
    bind *:80
    default_backend web

backend web
    balance roundrobin {{ range service "web" }}
    server {{ .Name }} {{ .Address }}:{{ .Port }}{{ end }}

listen stats *:1936
    stats enable
    stats uri /
    stats hide-version
    stats auth user:password
